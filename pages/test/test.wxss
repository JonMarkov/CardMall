/* 全局样式 */

page {
  background: #fff;
}

/* 页面最大盒子样式 */

.content-det {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

/* 头图 */

.det-img {
  width: 90%;
}

/* 商品详细信息 */

.det-info {
  width: 90%;
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
  border-bottom: 1px solid #f0f0f0;
  padding: 30rpx 0rpx;
}

.info-up {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.up-new {
  color: #ff2727;
  font-size: 34rpx;
}

.up-old {
  margin-left: 20rpx;
  color: #bbb;
  font-size: 20rpx;
}

.info-centre {
  color: #3e3e3e;
  font-size: 30rpx;
  font-weight: bold;
}

.info-down {
  color: #8b8b9a;
  font-size: 24rpx;
}

/* 选择面值 */

.det-face {
  width: 90%;
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
  border-bottom: 1px solid #f0f0f0;
  padding: 30rpx 0rpx;
}

.face-up {
  font-size: 30rpx;
  font-weight: bold;
}

/*购买份数  */

.det-num {
  width: 90%;
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
  border-bottom: 1px solid #f0f0f0;
  padding: 30rpx 0rpx;
 justify-content: space-between
}

.num-left {
  font-size: 30rpx;
  font-weight: bold;
}
.num-right{
  width: 100%;
  float: right;
   margin-top: -40rpx
}

/*增加数量主容器*/
.stepper {
  margin-left: auto;
  width: 80px;
  height: 30px;
  /*给主容器设一个边框*/
  border: 1px solid #ccc;
  border-radius: 3px;
}
/*加号和减号*/
.stepper text {
  width: 19px;
  line-height: 26px;
  text-align: center;
  float: left;
}
/*数值*/
.stepper input {
  width: 40px;
  height: 26px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}
/*普通样式*/
.stepper .normal {
  color: black;
}
/*禁用样式*/
.stepper .disabled {
  color: #ccc;
}

.detailed{
  background: #fff;
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx;
  line-height: 30rpx
}
.detailed_one{
  font-weight: bold;
  font-size: 24rpx
}
.detailed_two{
  font-size: 18rpx;
  color: #ccc
}
.detailed_three{
  font-size: 14rpx
}

